<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sobremesa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="320dp"
            tools:layout_editor_absoluteY="227dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:scaleType="fitCenter"
                android:src="@drawable/napolithanos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Sorvete NapoliThanos" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:scaleType="fitCenter"
                android:src="@drawable/rapadura" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Rapadura" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bolo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Bolo" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sorvete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Banana Split" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>