<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btVerifica"
        android:layout_width="235dp"
        android:layout_height="65dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="91dp"
        android:onClick="abrirProximaTela"
        android:text="Verificar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etAlcool"
        app:layout_constraintTop_toBottomOf="@+id/etAlcool" />

    <EditText
        android:id="@+id/etGasolina"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:layout_marginBottom="23dp"
        android:hint="Preço da gasolina"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/etAlcool"
        app:layout_constraintEnd_toEndOf="@+id/etAlcool"
        app:layout_constraintStart_toStartOf="@+id/etAlcool"
        app:layout_constraintTop_toBottomOf="@+id/imgResultado" />

    <EditText
        android:id="@+id/etAlcool"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="39dp"
        android:hint="Preço do alcool"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/btVerifica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGasolina" />

    <ImageView
        android:id="@+id/imgResultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/etGasolina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>